<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/18" fx:controller="com.app.flight.controller.HelpController">
    <children>
        <GridPane prefHeight="800.0" prefWidth="1200.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="120.0" minHeight="0.0" prefHeight="112.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="538.0" minHeight="10.0" prefHeight="523.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="414.0" minHeight="0.0" prefHeight="164.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <ImageView fitHeight="58.0" fitWidth="250.0" layoutX="29.0" layoutY="42.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../ico/BritishAirwayLogo.png"/>
                            </image>
                        </ImageView>
                        <ImageView fitHeight="51.0" fitWidth="48.0" layoutX="310.0" layoutY="38.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../ico/OneworldLogo.png"/>
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
                    <children>
                        <Button fx:id="back" layoutX="128.0" layoutY="50.0" mnemonicParsing="false"
                                onAction="#backButton" prefHeight="64.0" prefWidth="179.0"
                                style="-fx-background-color: grey; -fx-font-weight: bold;" text="Back" textFill="WHITE">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Button>
                        <Button fx:id="call" layoutX="876.0" layoutY="50.0" mnemonicParsing="false"
                                onAction="#callButton" prefHeight="64.0" prefWidth="179.0"
                                style="-fx-background-color: red; -fx-font-weight: bold;" text="Yes" textFill="WHITE">
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
                <GridPane GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="246.0" minHeight="10.0" prefHeight="49.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="452.0" minHeight="10.0" prefHeight="452.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="730.0" text="Need help?"
                               textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                            <font>
                                <Font name="System Bold" size="38.0"/>
                            </font>
                        </Label>
                        <AnchorPane GridPane.rowIndex="1">
                            <children>
                                <ImageView fitHeight="307.0" fitWidth="529.0" layoutX="336.0" layoutY="45.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/help.jpg"/>
                                    </image>
                                </ImageView>
                                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="235.0" layoutY="385.0"
                                       prefHeight="39.0" prefWidth="730.0"
                                       text="If you need our help, you can also check in at a check-in desk. "
                                       textOverrun="WORD_ELLIPSIS">
                                    <font>
                                        <Font name="System Bold" size="21.0"/>
                                    </font>
                                </Label>

                            </children>
                        </AnchorPane>
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
